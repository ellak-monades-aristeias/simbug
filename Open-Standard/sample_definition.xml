<configuration>
	<parameter>
		<name>config1</name>
		<value>int config1 = 4;</name>
		<comment>The first configuration parameter</comment>
	</parameter>
	
	<parameter>
		<name>config2</name>
		<expression>int config2 = 4;</name>
		<comment>The second configuration parameter</comment>
	</parameter>
</configuration>


<random_number_generators>
	<rng>
		<name>uniform</name>
		<expression>return Math.random();</expression> 
	</rng>
</random_number_generators>


<variables>
	<player_choices>
		<variable>
			<name>choice1</name>
			<expression>Integer</expression>
		</variable>
		
		<variable>
			<name>Choice2</name>
			<type>Integer</type>
		</variable>
	</player_choices>
	
	<user_state>
		<variable>
			<name>UserState1</name>
			<type>Integer</type>
		</variable>
		
		<variable>
			<name>UserState2</name>
			<type>Integer</type>
		</variable>
	</user_state>
	
	<world_state>
		<variable>
			<name>WorldState1</name>
			<type>Integer</type>
		</variable>
	</world_state>
	
	<external>
	</external>
</variables>


<choices_to_state_algorithm>
	UserState1 = Choice1 + Choice2
	UserState2 = Choice2
	WorldState1 = UserState1 - UserState2 
</choices_to_state_algorithm>
